{
    "name": "ecentria/ecentria-rest-bundle",
    "type": "symfony-bundle",
    "minimum-stability": "dev",
    "description": "Goal of this bundle is to simplify process of creating APIs with Symfony. We use already well-coded libraries, combine them together to simplify process and not to re-invent the wheel. We've chose REST and HATEOS to have unified standards of API requests and responses.",
    "keywords": ["ecentria", "library", "rest"],
    "homepage": "https://github.com/ecentria/EcentriaRestBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Chernecov",
            "email": "sergey.chernecov@intexsys.lv"
        },
        {
            "name": "Ruslan Zavacky",
            "email": "ruslan.zavacky@intexsys.lv"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ecentria/EcentriaRestBundle"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/symfony": ">=2.4 <3.0",
        "symfony/monolog-bundle": ">=2.4 <3.0",
        "friendsofsymfony/rest-bundle": "~1.4",
        "jms/serializer-bundle": "~0.13",
        "willdurand/rest-extra-bundle": "@stable",
        "willdurand/hateoas-bundle": "~0.3",
        "gedmo/doctrine-extensions": "~2.3",
        "egulias/email-validator": "~1.1",
        "nelmio/api-doc-bundle": "2.7.0",
        "doctrine/orm": "~2.3",
        "doctrine/doctrine-bundle": "~1.2",
        "sensio/framework-extra-bundle": "~3.0.1",
        "stof/doctrine-extensions-bundle": "^1.2@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "4.6.*"
    },
    "autoload": {
        "psr-4": { "Ecentria\\Libraries\\EcentriaRestBundle\\": "" }
    },
    "branch-alias": {
        "dev-master": "0.0.x-dev"
    }
}
